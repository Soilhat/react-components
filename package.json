{
  "name": "@soilhat/react-components",
  "version": "0.0.0",
  "type": "module",
  "description": "A collection of reusable React components built with TypeScript and Tailwind CSS",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Soilhat M"
  },
  "exports": "./dist/main.js",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "url": "git+https://github.com/Soilhat/react-components.git"
  },
  "bugs": {
    "url": "https://github.com/Soilhat/react-components/issues"
  },
  "homepage": "https://soilhat.github.io/react-components",
  "keywords": [
    "react",
    "components",
    "typescript",
    "tailwind"
  ],
  "scripts": {
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest --project=storybook",
    "test:coverage": "vitest --project=storybook --coverage",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "release": "semantic-release"
  },
  "peerDependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.1.13",
    "date-fns": "^4.1.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-markdown": "^10.1.0",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.33.0",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-styling-webpack": "^3.0.0",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^10.1.11",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "playwright": "^1.55.0",
    "prettier": "^3.3.3",
    "semantic-release": "^21.1.2",
    "storybook": "^10.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lib-inject-css": "^2.2.2",
    "vitest": "^3.2.4"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "registry": "https://npm.pkg.github.com",
          "pkgRoot": "."
        }
      ],
      "@semantic-release/github"
    ]
  }
}
